<% content_for :extra_css do %>
<link rel="stylesheet" type="text/css" href="/stylesheets/datepicker.css" />
<% end %>

<% content_for :extra_javascript do %>
<script src="/javascripts/date.js"></script>
<script src="/javascripts/bootstrap-datepicker.js"></script>
<script src="/javascripts/meeting_add.js"></script>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-12 page-title"><div><img id="page-spinner" class="invisible" src="/images/spinner.gif"/>Add a meeting</div></div>
	</div>

	<form class="form-horizontal">
		<div class="row">
			<div id="validation-errors" class="col-sm-offset-2 col-sm-10"></div>
		</div>
		<div id="add-meeting-date-group" class="form-group">
			<label class="col-sm-2 control-label">Date</label>
			<div class="col-sm-10"><input class="form-control" id="add-meeting-date" type="text"/></div>
		</div>
		<div id="add-meeting-time-group" class="form-group">
			<label class="col-sm-2 control-label">Time</label>
			<div class="col-sm-10"><input class="form-control" id="add-meeting-time" type="text"/></div>
		</div>
		<div id="add-meeting-location-group" class="form-group">
			<label class="col-sm-2 control-label">Location</label>
			<div class="col-sm-10"><input class="form-control" id="add-meeting-location" type="text"/></div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-default" id="add-meeting-save-button">Save</button>
			</div>
		</div>
	</form>
